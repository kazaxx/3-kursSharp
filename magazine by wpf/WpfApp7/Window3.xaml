        <Label Content="🏠🚚🛠️🗑️🔋" Margin="495,263,0,112" FontSize="17" HorizontalAlignment="Left" Foreground="Black" Width="165" FontWeight="Bold"/>
        <Label Content="10:00 - 22:00" Margin="710,263,0,100" FontSize="17" HorizontalAlignment="Left" Foreground="Black" Width="212" FontWeight="Bold"/>
        <WrapPanel Background="#545254" Height="1" Width="917" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="292" Margin="5,308,0,0"/>
