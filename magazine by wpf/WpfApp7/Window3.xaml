        <WrapPanel Background="#545254" Height="1" Width="930" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="292" Margin="-5,423,0,0"/>
        <Button Content="Назад" Style="{StaticResource RoundedButtonStyle}" Background="#545254" Foreground="White" Margin="756,24,13,375" Click="BackButton_Click"/>
        <WrapPanel Background="#545254" Height="1" Width="919" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,394,0,0" RenderTransformOrigin="0.5,0.5">
            <WrapPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.003"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.021"/>
                </TransformGroup>
            </WrapPanel.RenderTransform>
        </WrapPanel>
    </Grid>
</Window>
